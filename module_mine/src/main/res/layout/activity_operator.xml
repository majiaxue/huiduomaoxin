<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fgfxcgdfg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <ImageView
                    android:id="@+id/operator_back"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_44"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dp_14"
                    android:src="@drawable/icon_fanhui_bai" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:text="升级运营商"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_17" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="#dedede" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_348"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_270"
                android:background="@drawable/pop_clear_cache"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_16"
                    android:includeFontPadding="false"
                    android:text="权益说明"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/operator_shuoming"
                    android:layout_width="@dimen/dp_312"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:lineHeight="@dimen/dp_20"
                    android:text="啊撒飞洒发生的阿斯蒂芬撒发射点时代高浮雕鬼地方维特如果是的观点首富岁的法国萨的管道施工啊士大夫十大发射点撒地方撒地方撒地方撒地方撒地方撒地方撒地方撒地方撒地方的萨芬士大夫撒地方"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/operator_bg_change"
                android:layout_width="@dimen/dp_365"
                android:layout_height="@dimen/dp_260"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_24"
                android:background="@drawable/ghfgdf">

                <TextView
                    android:id="@+id/operator_junior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:padding="@dimen/dp_15"
                    android:text="初级运营商"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/operator_senior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_24"
                    android:padding="@dimen/dp_15"
                    android:text="高级运营商"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <RelativeLayout
                    android:id="@+id/operator_rela_junior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/operator_junior"
                    android:layout_marginTop="@dimen/dp_30">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:layout_marginRight="@dimen/dp_24"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:src="@drawable/ghf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:includeFontPadding="false"
                            android:text="条件一："
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/operator_factor1_junior"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="直推有效粉丝10个，非直推有效粉丝30个"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:layout_marginTop="@dimen/dp_23"
                        android:layout_marginRight="@dimen/dp_23"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_25"
                            android:src="@drawable/ghf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_25"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:text="条件二："
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/operator_factor2_rv_junior"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/dp_25"
                        android:includeFontPadding="false"
                        android:text="备注：两个条件任选其一"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/operator_rela_senior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/operator_junior"
                    android:layout_marginTop="@dimen/dp_35"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:layout_marginRight="@dimen/dp_37"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:src="@drawable/ghf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:includeFontPadding="false"
                            android:text="条件一："
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/operator_factor1_senior"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="直推有效粉丝1000个，非直推有效粉丝2000个"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:layout_marginTop="@dimen/dp_52"
                        android:layout_marginRight="@dimen/dp_23"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:src="@drawable/ghf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:includeFontPadding="false"
                            android:text="条件二："
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/operator_factor2_senior"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="1888元"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/operator_pay_senior"
                            android:layout_width="@dimen/dp_55"
                            android:layout_height="@dimen/dp_25"
                            android:background="@drawable/bg_5_fb4619"
                            android:gravity="center"
                            android:text="支付"
                            android:textColor="#fefefe"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/operator_yugu_senior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_95"
                        android:includeFontPadding="false"
                        android:text="个人预估收益：888元"
                        android:textColor="#fb4619"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/dp_25"
                        android:includeFontPadding="false"
                        android:text="备注：两个条件任选其一"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_27"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_124"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_14"
                android:background="#333333" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="运营商权益"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="@dimen/dp_124"
                android:layout_height="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_14"
                android:background="#333333" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/operator_quanyi_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_14"></android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/operator_invite_fans"
            android:layout_width="@dimen/dp_348"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_22"
            android:background="@drawable/bg_22_jianbian"
            android:gravity="center"
            android:text="邀请粉丝"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>