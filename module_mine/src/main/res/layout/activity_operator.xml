<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/operator_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fgfxcgdfg"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="@dimen/dp_348"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_325"
                android:background="@drawable/pop_clear_cache"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_16"
                    android:includeFontPadding="false"
                    android:text="权益说明"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/operator_shuoming"
                    android:layout_width="@dimen/dp_312"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:lineHeight="@dimen/dp_20"
                    android:text="升级运营商后，收益将大幅提升哦！\n1：升级运营商直推订单收益比会员提高约80%。\n2：升级运营商享受团队订单的收益。\n3：升级运营商享受培育运营商的奖励。\n4：升级运营商优先享受平台给与的扶持"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/operator_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_13"
                android:overScrollMode="never">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/operator_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/include_status" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/operator_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/operator_status">

        <ImageView
            android:id="@+id/operator_back"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_44"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_14"
            android:src="@drawable/icon_fanhui_bai" />

        <TextView
            android:id="@+id/operator_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:includeFontPadding="false"
            android:text="升级运营商"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_17" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="#dedede" />
    </RelativeLayout>

    <TextView
        android:id="@+id/operator_invite_fans"
        android:layout_width="@dimen/dp_348"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/bg_22_jianbian"
        android:gravity="center"
        android:text="邀请粉丝"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>