<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_196"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_mine_top">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/icon_dianpu15" />

        <TextView
            android:id="@+id/alteration_rec_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/image1"
            android:text="private简约男装"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/alteration_rec_image"
            android:layout_width="@dimen/dp_92"
            android:layout_height="@dimen/dp_92"
            android:layout_below="@id/image1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20" />

        <TextView
            android:id="@+id/alteration_rec_name"
            android:layout_width="@dimen/dp_191"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/alteration_rec_image"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_toRightOf="@id/alteration_rec_image"
            android:ellipsize="end"
            android:lines="2"
            android:text="原宿潮牌短袖T恤男夏季新款休闲欧美bf风青少年韩版宽松大码T恤"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/alteration_rec_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alteration_rec_name"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/alteration_rec_name"
            android:text="x1"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_21"
            android:layout_below="@id/alteration_rec_count"
            android:layout_alignLeft="@id/alteration_rec_name"
            android:background="@drawable/bg_linear5f5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="颜色："-->
                <!--android:textColor="#999999"-->
                <!--android:textSize="@dimen/sp_12" />-->

            <TextView
                android:id="@+id/alteration_rec_Attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:text="白色"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="，尺码："-->
                <!--android:textColor="#999999"-->
                <!--android:textSize="@dimen/sp_12" />-->

            <!--<TextView-->
                <!--android:id="@+id/alteration_rec_size"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="XXXL"-->
                <!--android:textColor="#999999"-->
                <!--android:textSize="@dimen/sp_12" />-->
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alteration_rec_image"
            android:layout_alignLeft="@id/alteration_rec_image"
            android:layout_marginTop="@dimen/dp_24"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:src="@drawable/icon_tuikuan" />

            <TextView
                android:id="@+id/alteration_rec_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:text="仅退款"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/alteration_rec_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款成功"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <TextView
            android:id="@+id/alteration_rec_view_details"
            android:layout_width="@dimen/dp_73"
            android:layout_height="@dimen/dp_23"
            android:layout_alignRight="@id/alteration_rec_count"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_14"
            android:background="@drawable/bg_5_fd3c15_border"
            android:gravity="center"
            android:text="查看详情"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

</LinearLayout>