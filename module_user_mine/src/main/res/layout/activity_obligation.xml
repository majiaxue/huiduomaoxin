<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.obligation.ObligationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <ImageView
            android:id="@+id/obligation_image_back"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="等待付款"
            android:textColor="#333333"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/obligation_relative"
                android:layout_width="@dimen/dp_362"
                android:layout_height="@dimen/dp_104"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_dizhi">

                <TextView
                    android:id="@+id/obligation_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_22"
                    android:includeFontPadding="false"
                    android:text="施工方"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/obligation_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/obligation_name"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/obligation_name"
                    android:includeFontPadding="false"
                    android:text="132****5918"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/obligation_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/obligation_name"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_29"
                    android:includeFontPadding="false"
                    android:text="时代噶杀啥的噶似的搞定撒噶"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_18"
                    android:src="@drawable/icon_gengduo2" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/bg_mine_top">

                <LinearLayout
                    android:id="@+id/obligation_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_13"
                        android:src="@drawable/icon_dianpu13" />

                    <TextView
                        android:id="@+id/obligation_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:text="private简约男装"
                        android:textColor="#e85130"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_12"
                        android:src="@drawable/icon_hongjiantou" />

                </LinearLayout>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/obligation_image"
                    android:layout_width="@dimen/dp_92"
                    android:layout_height="@dimen/dp_92"
                    android:layout_below="@id/obligation_linear"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_20" />

                <TextView
                    android:id="@+id/obligation_goods_name"
                    android:layout_width="@dimen/dp_191"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/obligation_image"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_toRightOf="@id/obligation_image"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="原宿潮牌短袖T恤男夏季新款休闲欧美bf风青少年韩版宽松大码T恤"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:id="@+id/obligation_linear1"
                    android:layout_width="@dimen/dp_145"
                    android:layout_height="@dimen/dp_21"
                    android:layout_below="@id/obligation_goods_name"
                    android:layout_alignLeft="@id/obligation_goods_name"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/bg_linear5f5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="颜色："
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/obligation_colour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="白色"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="，尺码："
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/obligation_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXL"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/obligation_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/obligation_linear1"
                    android:layout_alignLeft="@id/obligation_goods_name"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="¥59"
                    android:textColor="#e85130"
                    android:textSize="@dimen/sp_15" />

                <com.example.view.AddAndSubView
                    android:id="@+id/obligation_add_and_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/obligation_price"
                    android:layout_alignEnd="@+id/obligation_goods_name" />


                <TextView
                    android:id="@+id/obligation_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/obligation_image"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="商品金额"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/obligation_goods_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/obligation_text1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:text="￥59.00"
                    android:textColor="#e85130"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/obligation_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/obligation_text1"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="运      费"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/obligation_freight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/obligation_text2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:text="+￥0.00"
                    android:textColor="#e85130"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/obligation_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/obligation_text2"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="优惠券"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/obligation_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/obligation_text3"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:text="-￥10.00"
                    android:textColor="#e85130"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_1"
                    android:layout_below="@id/obligation_text3"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="#ececec" />

                <TextView
                    android:id="@+id/obligation_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="待付款"
                    android:textColor="#e85130"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/obligation_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/obligation_text4"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:text="￥49.00"
                    android:textColor="#e85130"
                    android:textSize="@dimen/sp_13" />

            </RelativeLayout>


            <ImageView
                android:layout_width="@dimen/dp_106"
                android:layout_height="@dimen/dp_14"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@drawable/icon_weinituijian" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/obligation_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/obligation_time_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="剩60分自动关闭订单"
            android:textColor="#e85130"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0_1"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/obligation_cancellation_order"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/bg_linear5f5"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/obligation_payment"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/button_jiesuan"
            android:gravity="center"
            android:text="付款"
            android:textColor="#fefefe"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

</LinearLayout>
