                <!--android:textSize="@dimen/sp_12" />-->
            </LinearLayout>

            <TextView
                android:id="@+id/refund_particulars_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/refund_particulars_goods_name"
