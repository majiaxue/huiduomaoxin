<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/community_temp1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_224"
            android:scaleType="fitXY"
            android:src="@drawable/icon_shequ" />

        <android.support.design.widget.TabLayout
            android:id="@+id/community_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_below="@id/community_temp1"
            app:tabBackground="@android:color/transparent"
            app:tabGravity="fill"
            app:tabIndicatorColor="#fc5917"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="@dimen/dp_3"
            app:tabMode="fixed"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="#fc5917"
            app:tabTextColor="#333333" />

        <android.support.v4.view.ViewPager
            android:id="@+id/community_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/community_tab"
            android:overScrollMode="never" />

        <android.support.design.widget.TabLayout
            android:id="@+id/community_tab_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_above="@id/community_vp"
            android:visibility="gone"
            app:tabBackground="@android:color/transparent"
            app:tabGravity="fill"
            app:tabIndicatorColor="#fc5917"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="@dimen/dp_3"
            app:tabMode="fixed"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="#fc5917"
            app:tabTextColor="#333333" />
    </RelativeLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>