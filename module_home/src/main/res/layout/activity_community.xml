<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_status" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_224"
        android:scaleType="fitXY" />

    <android.support.design.widget.TabLayout
        android:id="@+id/community_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:tabBackground="@android:color/transparent"
        app:tabGravity="fill"
        app:tabIndicatorColor="#fc5917"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="@dimen/dp_3"
        app:tabMode="fixed"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="#fc5917"
        app:tabTextColor="#333333" />

    <android.support.v4.view.ViewPager
        android:id="@+id/community_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />
</LinearLayout>