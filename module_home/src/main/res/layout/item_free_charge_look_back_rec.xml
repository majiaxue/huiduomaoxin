<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@drawable/bg_corner_radius10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/free_charge_rec_look_back_image"
            android:layout_width="@dimen/dp_87"
            android:layout_height="@dimen/dp_87"
            android:layout_marginLeft="@dimen/dp_13"
            app:roundedCornerRadius="@dimen/dp_3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15">

            <ImageView
                android:id="@+id/free_charge_rec_look_back_image1"
                android:layout_width="@dimen/dp_43"
                android:layout_height="@dimen/dp_19"
                android:src="@drawable/image_tbk" />

            <TextView
                android:id="@+id/free_charge_rec_look_back_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/free_charge_rec_look_back_image1"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_toRightOf="@id/free_charge_rec_look_back_image1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lines="1"
                android:text="【3瓶装】小紫瓶保湿乳液"
                android:textColor="#222222"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/free_charge_rec_look_back_preferential_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/free_charge_rec_look_back_image1"
                android:layout_alignLeft="@id/free_charge_rec_look_back_image1"
                android:layout_marginTop="@dimen/dp_9"
                android:includeFontPadding="false"
                android:text="￥4.99"
                android:textColor="#fb3912"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/free_charge_rec_look_back_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/free_charge_rec_look_back_title"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_toRightOf="@id/free_charge_rec_look_back_preferential_price"
                android:includeFontPadding="false"
                android:text="￥5.99"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />


            <TextView
                android:id="@+id/free_charge_rec_look_back_subsidy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/free_charge_rec_look_back_original_price"
                android:layout_marginTop="@dimen/dp_26"
                android:includeFontPadding="false"
                android:text="付款4.99元，补贴4.99元"
                android:textColor="#999999"
                android:textSize="@dimen/sp_10" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>