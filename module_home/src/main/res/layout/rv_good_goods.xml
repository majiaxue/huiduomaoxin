<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rv_good_goods_head"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_39"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_17"
        android:src="@drawable/icon_weixin2" />

    <TextView
        android:id="@+id/rv_good_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rv_good_goods_head"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_toRightOf="@id/rv_good_goods_head"
        android:text="淘宝客"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/rv_good_goods_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rv_good_goods_head"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_toRightOf="@id/rv_good_goods_head"
        android:text="2019-05-17  09:24:20"
        android:textColor="#999999"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/rv_good_goods_content"
        android:layout_width="@dimen/dp_176"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_good_goods_time"
        android:layout_alignLeft="@id/rv_good_goods_time"
        android:layout_marginTop="@dimen/dp_15"
        android:text="脱单关键，拥有
【超人】     三刀头电动剃须刀
    39元起！
胡子大叔变身      性感小鲜肉
520给男票打扮也用的着"
        android:textColor="#333333"
        android:textSize="@dimen/sp_13" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_good_goods_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_101"
        android:layout_below="@id/rv_good_goods_content"
        android:layout_alignLeft="@id/rv_good_goods_time"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15" />

    <LinearLayout
        android:id="@+id/rv_good_goods_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:layout_below="@id/rv_good_goods_img"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_26"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rv_good_goods_kouling"
            android:layout_width="@dimen/dp_270"
            android:layout_height="match_parent"
            android:background="@drawable/bg_2_de_border"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="￥jfddfddghdhduuhgj￥jfcsdcjffdjfstfhgdfdfjgdggdgu"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/rv_good_goods_copy"
            android:layout_width="@dimen/dp_66"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/bg_2_fc5b17"
            android:gravity="center"
            android:text="复制"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:id="@+id/rv_good_goods_temp1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/rv_good_goods_linear"
        android:layout_marginTop="@dimen/dp_25"
        android:background="#dedede" />

    <View
        android:id="@+id/rv_good_goods_temp2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:layout_below="@id/rv_good_goods_temp1"
        android:background="#f5f5f5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/rv_good_goods_temp2"
        android:background="#dedede" />
</RelativeLayout>